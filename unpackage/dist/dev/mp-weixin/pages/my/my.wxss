.container .my-top {
  background-color: #FEC300;
  height: 320rpx;
  position: relative;
}
.container .top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 20px;
}
.container .top .left {
  display: flex;
  align-items: center;
}
.container .top image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-right: 20px;
}
.container .vip-img-box {
  position: absolute;
  left: 7.5%;
  bottom: -46px;
}
.container .vip-img {
  border-radius: 8px;
  height: 80px;
}
.container .my-list {
  margin-top: 55px;
  padding: 0 10px;
}
.container .my-list .my-list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 52px;
  font-size: 28rpx;
  border-bottom: 1px solid #ECECEC;
}
.container .my-list .my-list-item text {
  margin-left: 10px;
}
.container .my-list .my-list-item .list-item-left {
  display: flex;
  align-items: center;
}
.container .my-list .list-top {
  border: 1px solid #999;
  height: 70px;
  line-height: 70px;
  padding-left: 16px;
  font-size: 28rpx;
  background-color: #FFF;
  position: absolute;
  top: -34px;
  left: 16px;
  right: 16px	;
}

