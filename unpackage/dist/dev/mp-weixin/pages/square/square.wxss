.container {
  padding: 10px;
}
.container .u-tabs__wrapper__nav__item {
  flex: none !important;
}
.container .box {
  margin: 10px;
}
.container .box-item {
  display: flex;
  align-items: center;
  line-height: 2;
  box-shadow: 2px 2px 10px #999;
  margin-bottom: 10px;
  border-radius: 8px;
}
.container .box-item image {
  width: 300rpx;
  height: 240rpx;
  border-radius: 8px 0 0 8px;
}
.container .no-data {
  margin-top: 30%;
}
.container .no-data image {
  width: 150px !important;
  height: 150px !important;
}
.container .no-data .u-empty__text {
  font-size: 28rpx !important;
}
.container .u-loadmore__content text {
  font-size: 12px !important;
}

