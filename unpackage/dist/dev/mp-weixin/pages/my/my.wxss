.container .my-top {
  padding: 10px 20px;
  background-color: #F9C13D;
}
.container .top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .top .left {
  display: flex;
  align-items: center;
}
.container .top image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-right: 20px;
}
.container .vip-img {
  margin-top: 38rpx;
  border-radius: 8px;
}
.container .my-list {
  border: 1px solid #999;
}
.container .my-list .my-list-item {
  display: flex;
  border-bottom: 1px solid #999;
  line-height: 52px;
  font-size: 28rpx;
  padding: 18rpx 0;
}
.container .my-list .my-list-item text {
  margin-left: 10px;
}
.container .my-list .my-list-item:last-child {
  border-bottom: none;
}
.container .my-list .list-top {
  border: 1px solid #999;
  height: 70px;
  line-height: 70px;
  padding-left: 16px;
  font-size: 28rpx;
  background-color: #FFF;
  position: absolute;
  top: -34px;
  left: 16px;
  right: 16px	;
}

