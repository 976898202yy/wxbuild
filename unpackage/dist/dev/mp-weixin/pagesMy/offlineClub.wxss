.container {
  padding: 10px;
}
.container .scrollContainer {
  white-space: nowrap;
}
.container .vip-info {
  border-radius: 10px;
  padding: 20px 20px 10px;
  background-color: #DCDCDC;
  white-space: normal;
  width: 76%;
  margin: 10px;
  box-shadow: 0px 0px 10px -2px rgba(0, 0, 0, 0.5);
}
.container .vip-info .title {
  font-size: 50rpx;
  margin-bottom: 80px;
}
.container .vip-info .subhead {
  font-size: 40rpx;
  margin-bottom: 10px;
}
.container .active {
  background: linear-gradient(to right bottom, #FCE399, #FAD187 70px);
  color: #74500E;
  box-shadow: 0px 0px 10px 2px #F5DAA1;
}

