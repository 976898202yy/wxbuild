.container {
  padding: 20px;
}
.container .my-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .my-top .left {
  display: flex;
  align-items: center;
}
.container .my-top image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-right: 20px;
}
.container .my-list {
  margin: 40px auto;
  border: 1px solid #999;
  position: relative;
}
.container .my-list .my-list-item {
  height: 50px;
  border-bottom: 1px solid #999;
  line-height: 50px;
  padding-left: 16px;
  font-size: 28rpx;
}
.container .my-list .my-list-item:last-child {
  border-bottom: none;
}
.container .my-list .list-top {
  border: 1px solid #999;
  height: 70px;
  line-height: 70px;
  padding-left: 16px;
  font-size: 28rpx;
  background-color: #FFF;
  position: absolute;
  top: -34px;
  left: 16px;
  right: 16px	;
}

